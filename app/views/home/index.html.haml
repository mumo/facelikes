.container
  .header
    = image_tag "/images/header.jpg"
  .content
    %ul
      %li.winner
        .photo
          = image_tag @winner[:source]
          .likes
            = @winner[:likes_count]
            likes
          .album
            Fotos de Para todo hay FANS -
          .album
            Gana un Ipod Nano con "Para Todo Hay Fans"
            = "(Parte #{@winner[:album]})"
          .link
            = link_to @winner[:link], @winner[:link]
      - @top_ten.each do |photo|
        %li.photo_looser
          = image_tag photo[:picture]
          #likes
            = photo[:likes_count]
            likes
          #link
            = link_to "Ver Foto", photo[:link]
:css
  .header{
    img{
      border:none;
      text-align: center;
    }
  }
  li{
   list-style:none;
  }
   a{
    text-decoration: none;
    color:white;
  }

  li.winner{
    text-align:center;
  }
  div.container{
    background-color: #0080af;

  }

  div.header{
    background-color: #003662;
  }
  div.content{
    padding: 15px 0px 15px 0px;
    text-align: center;
  }

  .photo{
    border-bottom: 2px solid white;
    text-align: left;
    width:720px;
    margin-bottom: 15px;
    padding-bottom: 10px;
    img{
      border: 5px solid white;
    }
  }

  .photo_looser{
    width: 26%;
    display: inline-block;
    color: white;
    text-align:center;
    padding:2px;
    img{
      border:2px solid white;
    }
    a{
      text-decoration:none;
      color:white;
    }
  }

  .likes{
    font-weight: bold;
    color: white;
    font-size: 5em;
    padding-left: 2px;
    font-family: arial;
    img{
      border: 5px solid white;
    }
  }

  .album{
    font-weight: bold;
    color:white;
    font-size: 1.5em;
    padding-left: 2px;
    font-family: arial;
  }

  .link{
    color:white;
    font-size:.8em;
    padding-left: 2px;
  }

  #likes{
    font-sixe: 1.2em;
    img{
      border: 2px solid white;
    }
  }