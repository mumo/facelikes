.container
  .header
    %h1
      Para todo hay fans
  .content
    %ul
      - @top_ten.each do |photo|
        %li
          .photo
            = image_tag photo[:source]
            .likes
              = photo[:likes_count]
              likes
            .album
              Fotos de Para todo hay FANS -
            .album
              Gana un Ipod Nano con "Para Todo Hay Fans"
              = "(Parte #{photo[:album]})"
            .link
              = link_to photo[:link]
:css
  li{
   list-style:none;
  }
   a{
    text-decoration: none;
    color:white;
  }

  img {
    border: 2px solid white;
  }

  div.container{
    background-color: #0080af;

  }

  div.header{
    background-color: #003662;
  }
  div.content{
    padding: 15px 0px 15px 0px;
    text-align: center;
  }


  .photo{
    border-bottom: 2px solid white;
    text-align: left;
    width:720px;
    margin-bottom: 15px;
    padding-bottom: 10px;
  }

  .likes{
    font-weight: bold;
    color: white;
    font-size: 5em;
    padding-left: 2px;
    font-family: arial;
  }

  .album{
    font-weight: bold;
    color:white;
    font-size: 1.5em;
    padding-left: 2px;
    font-family: arial;
  }

  .link{
    color:white;
    font-size:.8em;
    padding-left: 2px;
  }